<div class="card column is-4 is-offset-4">
  <div class="card-content">
    <a href="<%= edit_user_registration_path  %>" class="button is-warning is-rounded is-pulled-right"><i class="fa fa-edit"></i> Edit</a>
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4"><%= @user.name %> <%= @user.lastname %></p>
        <p class="subtitle is-6"><%= @user.email %></p>
      </div>
    </div>

    <div class="content">
      <p><%= @user.description %></p>
      <br>
      <time>Join <%= @user.created_at %></time>
    </div>
  </div>
</div>